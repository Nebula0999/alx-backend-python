#!/bin/bash

# Script to start a local Kubernetes cluster, verify it's running, and list pods.

# Step 1: Start Minikube
echo " Starting Minikube..."
minikube start

# Step 2: Verify cluster is running
echo " Verifying Kubernetes cluster..."
kubectl cluster-info

# Step 3: Retrieve available pods in all namespaces
echo " Retrieving pods in all namespaces..."
kubectl get pods --all-namespaces
